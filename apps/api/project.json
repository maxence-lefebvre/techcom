{
  "root": "apps/api",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/node:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/api",
        "main": "apps/api/src/main.ts",
        "tsConfig": "apps/api/tsconfig.app.json",
        "assets": ["apps/api/src/assets"]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "generatePackageJson": true,
          "fileReplacements": []
        }
      }
    },
    "serve": {
      "executor": "@nrwl/node:execute",
      "options": {
        "buildTarget": "api:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/api/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/api"],
      "options": {
        "jestConfig": "apps/api/jest.config.js",
        "passWithNoTests": true
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "noVerify": true,
        "push": false,
        "commitMessageFormat": "chore(release): bump ${projectName} to ${version} [skip ci]"
      }
    },
    "docker": {
      "executor": "@nx-tools/nx-docker:build",
      "options": {
        "file": "service.Dockerfile",
        "push": false,
        "tags": ["techintell/api:local"],
        "build-args": ["PACKAGE_PATH=apps/api"]
      },
      "configurations": {
        "production": {
          "push": true,
          "metadata": {
            "images": ["${DOCKER_REGISTRY}/${DOCKER_NAMESPACE}/api"],
            "__tags_comment__": "see https://github.com/docker/metadata-action",
            "flavor": ["latest=auto"],
            "tags": [
              "type=ref,event=branch",
              "type=ref,event=pr",
              "type=semver,pattern={{version}}",
              "type=semver,pattern={{major}}.{{minor}}",
              "type=semver,pattern={{major}}"
            ]
          }
        }
      }
    }
  },
  "tags": []
}
